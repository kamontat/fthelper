{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/kamontat/fthelper/main/generator/schema/generator.json",
  "type": "object",
  "title": "configuration",
  "description": "root configuration for generators",
  "required": ["generators"],
  "definitions": {
    "singlefs": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["file", "directory"]
            },
            "mode": {
              "type": "string",
              "const": "single"
            },
            "fullpath": {
              "type": "string"
            },
            "paths": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "oneOf": [{ "required": ["mode", "fullpath"] }, { "required": ["mode", "paths"] }]
        },
        {
          "type": "string"
        }
      ]
    },
    "multifs": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["file", "directory"]
            },
            "mode": {
              "type": "string",
              "const": "multiple"
            },
            "fullpath": {
              "type": "array",
              "items": { "type": "string" }
            },
            "paths": {
              "type": "array",
              "items": { "type": "array", "items": { "type": "string" } }
            }
          },
          "oneOf": [{ "required": ["mode", "fullpath"] }, { "required": ["mode", "paths"] }]
        },
        {
          "type": "string"
        }
      ]
    },
    "fs": {
      "oneOf": [
        {
          "$ref": "#/definitions/singlefs"
        },
        {
          "$ref": "#/definitions/multifs"
        }
      ]
    }
  },
  "properties": {
    "generators": {
      "type": "array",
      "title": "The generators schema",
      "description": "list of generators for generate data",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "json"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "inputs": {
                "$ref": "#/definitions/fs"
              },
              "output": {
                "$ref": "#/definitions/singlefs"
              },
              "merger": {
                "type": "object",
                "additionalProperties": {
                  "oneOf": [
                    {
                      "type": "number",
                      "enum": [0, 1]
                    },
                    {
                      "type": "object",
                      "$ref": "#/properties/generators/items/oneOf/0/properties/merger"
                    }
                  ]
                }
              }
            },
            "required": ["type", "inputs", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "create"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "output": {
                "$ref": "#/definitions/fs"
              }
            },
            "required": ["type", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "copy"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "input": {
                "$ref": "#/definitions/singlefs"
              },
              "output": {
                "$ref": "#/definitions/singlefs"
              }
            },
            "required": ["type", "input", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "template"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "input": {
                "$ref": "#/definitions/singlefs"
              },
              "output": {
                "$ref": "#/definitions/singlefs"
              }
            },
            "required": ["type", "input", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "strategy",
                "description": "similar to 'template' type but custom to support auto find path"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "name": {
                "type": "string",
                "description": "strategy name with extension (e.g. Strategy.py)"
              },
              "input": {
                "$ref": "#/definitions/singlefs"
              },
              "output": {
                "$ref": "#/definitions/singlefs"
              }
            },
            "required": ["type", "name"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "config",
                "description": "similar to 'json' type but custom to support auto find path"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "withEnv": {
                "type": "string",
                "description": "if this is not empty string, the config will be override with FTC_<name> environment",
                "default": "config"
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "clusterSuffix": {
                "type": "boolean",
                "description": "add cluster to suffix. this always be last one",
                "default": false
              },
              "suffix": {
                "type": "string",
                "description": "add custom suffix to config filename",
                "default": ""
              },
              "input": {
                "$ref": "#/definitions/fs"
              },
              "output": {
                "$ref": "#/definitions/singlefs"
              },
              "merger": {
                "type": "object",
                "additionalProperties": {
                  "oneOf": [
                    {
                      "type": "number",
                      "enum": [0, 1]
                    },
                    {
                      "type": "object",
                      "$ref": "#/properties/generators/items/oneOf/5/properties/merger"
                    }
                  ]
                }
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "bash",
                "description": "execute shell script"
              },
              "display": {
                "type": "string",
                "description": "name to display in summary log"
              },
              "withCluster": {
                "type": "boolean",
                "description": "enable this will make your generator run x times (where x is number of clusters)",
                "default": true
              },
              "withSudo": {
                "type": "boolean",
                "description": "this will apply only when file is provided"
              },
              "commands": {
                "type": "array",
                "items": { "type": "string" }
              },
              "file": {
                "$ref": "#/definitions/singlefs"
              }
            },
            "oneOf": [
              {
                "required": ["type", "commands"]
              },
              {
                "required": ["type", "file"]
              }
            ]
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
